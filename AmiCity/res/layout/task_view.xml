<ImageView android:id="@+id/PriorityImage" android:layout_marginTop="10dip" android:contentDescription="@string/app_name" android:layout_width="20dip" android:layout_height="20dip"/>
<TextView android:text="@+id/TextView01" android:id="@+id/TextView01" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_marginTop="5dip" android:layout_marginLeft="5dip" android:layout_toRightOf="@id/PriorityImage" ></TextView>
